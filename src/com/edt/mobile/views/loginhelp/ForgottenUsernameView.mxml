<?xml version="1.0" encoding="utf-8"?>
<components:XView xmlns:fx="http://ns.adobe.com/mxml/2009"
				  xmlns:s="library://ns.adobe.com/flex/spark"
				  title="Zaboravlje korisničko ime"
				  init="init()"
				  xmlns:components="com.edt.mobile.components.*"
				  pageUrl="forgottenUsername">

	<components:actionContent>
	</components:actionContent>
	
	<components:states>
		<s:State name="default"/>
		<s:State name="sent"/>
	</components:states>

	<components:layout>
		<s:VerticalLayout paddingLeft="4"
						  paddingRight="4"/>
	</components:layout>

	<s:Scroller width="100%"
				height="100%">

		<s:Group width="100%">

			<s:VGroup width="100%"
					  includeIn="default"
					  horizontalAlign="center"
					  paddingTop="10"
					  paddingBottom="10"
					  gap="10"
					  color="#555555">

				<s:Label text="Unesite email adresu"
						 fontWeight="bold"
						 width="100%"/>

				<s:TextInput width="100%"
							 id="ti"/>

				<components:XButton label="Pošalji"
									width="100%"
									primaryColor="{ThemeColors.RED}"
									click="resetClicked()"/>

				<s:Spacer height="30"/>

				<components:XInfoBox text="Unesite email adresu kojom ste registrovani na naš sajt a mi ćemo vam na unetu adresu poslati vaše korisničko ime."/>

			</s:VGroup>

			<s:VGroup width="100%"
					  includeIn="sent"
					  horizontalAlign="center"
					  paddingTop="10"
					  paddingBottom="10"
					  gap="10"
					  color="#555555">

				<s:Label text="Na unetu email adresu poslato je vaše korisničko ime."
						 width="100%"/>

				<components:XButton label="Vrati se na prijavu"
									width="100%"
									primaryColor="{ThemeColors.GREEN}"
									click="returnClicked()"/>

			</s:VGroup>

		</s:Group>

	</s:Scroller>

	<fx:Script>
		<![CDATA[
			import com.edt.mobile.components.XNotificationPopup;
			import com.edt.mobile.utils.ServiceCall;
			import com.edt.mobile.utils.ServiceUtils;
			import com.edt.mobile.utils.Settings;
			import com.evola.driving.util.ThemeColors;

			import mx.rpc.events.FaultEvent;
			import mx.utils.StringUtil;

			private var service:ServiceCall=new ServiceCall("rest/user/sendForgottenUsername", onForgottenUsername, onFault, "post");

			protected function init():void
			{

				currentState="default";

				if (ti)
					ti.text="";
			}

			private function resetClicked():void
			{
				var input:String=ti.text;

				input=StringUtil.trim(input);

				if (!input)
				{

					XNotificationPopup.show("Morate uneti vašu email adresu.");
					return;
				}

				var obj:Object={};
				obj.email=input;
				obj.recaptcha_challenge_field=Settings.ALLOWED_CHALLENGE;
				obj.recaptcha_response_field=Settings.ALLOWED_RESPONSE;

				service.send(obj);
			}

			private function onForgottenUsername(result:XML):void
			{

				currentState="sent";
			}

			private function onFault(event:FaultEvent):void
			{

				ServiceUtils.manageFault(event, "Greška tokom upita za korisničko ime.");
			}

			private function returnClicked():void
			{

				navigator.popView();
			}
		]]>
	</fx:Script>

</components:XView>
